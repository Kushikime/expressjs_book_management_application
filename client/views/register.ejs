<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title><%= pageName %></title>
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
    <!-- Google fonts-->
    <link
      href="https://fonts.googleapis.com/css?family=Varela+Round"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
  </head>
  <body id="page-top">
    <!-- Navigation-->
    <%-include('includes/header.ejs')%>

    <div class="content">
      <form
        class="registerForm"
        id="signUpForm"
        name="signUpForm"
        method="post"
        action="/register"
      >
        <div class="input-group">
          <input
            type="text"
            id="firstName"
            name="firstName"
            placeholder=" "
            required
          />
          <label for="firstName">First Name</label>
          <% if (typeof errors === 'object' && !!errors?.firstName?.message) {%>
          <span><%-errors.firstName.message%></span>
          <% } %>
        </div>

        <div class="input-group">
          <input
            type="text"
            id="lastName"
            name="lastName"
            placeholder=" "
            required
          />
          <label for="lastName">Last Name</label>
          <% if (typeof errors === 'object' && !!errors?.lastName?.message) {%>
          <span><%-errors.lastName.message%></span>
          <% } %>
        </div>

        <div class="input-group">
          <input
            type="text"
            id="address"
            name="address"
            placeholder=" "
            required
          />
          <label for="address">Address</label>
          <% if (typeof errors === 'object' && !!errors?.address?.message) {%>
          <span><%-errors.address.message%></span>
          <% } %>
        </div>

        <div class="input-group">
          <input type="text" id="city" name="city" placeholder=" " required />
          <label for="city">City</label>
          <% if (typeof errors === 'object' && !!errors?.city?.message) {%>
          <span><%-errors.city.message%></span>
          <% } %>
        </div>

        <div class="input-group">
          <input type="text" id="state" name="state" placeholder=" " required />
          <label for="state">State</label>
          <% if (typeof errors === 'object' && !!errors?.state?.message) {%>
          <span><%-errors.state.message%></span>
          <% } %>
        </div>

        <div class="input-group">
          <input
            type="text"
            id="zipCode"
            name="zipCode"
            placeholder=" "
            required
          />
          <label for="zipCode">Zip Code</label>
          <% if (typeof errors === 'object' && !!errors?.zipCode?.message) {%>
          <span><%-errors.zipCode.message%></span>
          <% } %>
        </div>
        <div class="input-group">
          <input
            type="password"
            id="password"
            name="password"
            placeholder=" "
            required
          />
          <label for="password">Password</label>
          <% if (typeof errors === 'object' && !!errors?.password?.message) {%>
          <span><%-errors.password.message%></span>
          <% } %>
        </div>
        <div class="input-group">
          <input
            type="email"
            id="email"
            name="email"
            placeholder=" "
            required
          />
          <label for="email">Email</label>
          <% if (typeof errors === 'object' && !!errors?.email?.message) {%>
          <span><%-errors.email.message%></span>
          <% } %>
        </div>

        <button class="btn primary" type="submit">Sign up</button>
      </form>
    </div>

    <!-- Footer-->
    <%-include('includes/footer.ejs')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
  </body>
</html>
